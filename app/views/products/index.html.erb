<% content_for :title, "The Best Books" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  
  <h1 class="custom-heading">The Best Books</h1>
  

  <%= link_to "Shop by Category", categories_path, class: "ml-10 rounded-lg h-64 w-full border border-gray-700 border-2 bg-gray-200 text-2xl text-blue-800 font-semibold p-2 hover:bg-gray-50" %>

  <div id="products" class="mt-8 min-w-full grid md:grid-cols-4 gap-8">
    <% if @products.any? %>
      <% @products.each do |product| %>
        <div class="shadow p-2"> <%= render product %> </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No products found.</p>
    <% end %>
  </div>
</div>
