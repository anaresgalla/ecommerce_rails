<% content_for :title, "The Best Books" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  
  <h1 class="custom-heading">The Best Books</h1>
  
  <div id="products" class="min-w-full grid grid-cols-4 gap-8">
    <% if @products.any? %>
      <% @products.each do |product| %>
        <%= render product %>
      <% end %>
    <% else %>
      <p class="text-center my-10">No products found.</p>
    <% end %>
  </div>
</div>
