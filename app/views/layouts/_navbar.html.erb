<div class="h-16 w-full fixed top-0 bg-gray-800  z-50">
  <div class="max-w-7xl h-full w-full mx-auto flex items-center justify-between p-8">
    <%= link_to root_path, class: 'flex items-end gap-4' do %>
      <%= image_tag('books.png', class:'w-10 object-cover') %>
      <span class="text-2xl text-gray-100"> The Best Books </span>
    <% end %>

    <%= link_to cart_path(@current_cart.secret_id) do %>
      <%= render "layouts/cart", cart: @current_cart %>
    <% end %>
  </div>
</div>