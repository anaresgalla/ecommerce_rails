<div class="w-full flex flex-col items-center md:pt-8">
  <div class="w-full mb-8 flex flex-col items-center">
    <h2 class="text-4xl font-semibold text-indigo-100 mb-4">Thank you for purchasing!</h2>
    <p class="text-2xl font-semibold text-indigo-50 mb-4">Your products will be shipped soon.</p>
    <div class="relative w-48 h-48 mx-auto" style="background-image: url('<%= asset_path('delivery.gif') %>'); background-size: contain; background-repeat: no-repeat; background-position: center;">
    </div>
  </div>
  <div class="mx-auto flex flex-col gap-2 items-center">
    <% @current_cart.products.each do |product| %>
      <div class="flex gap-2 font-semibold justify-between bg-gray-400/75 p-2 rounded-lg">
        <p class="text-lg text-indigo-100"> <%= product.name %></p>
        <p class="text-lg text-green-700"> <%= number_to_currency product.price %></p>
      </div>
    <% end %>
  </div>
</div>